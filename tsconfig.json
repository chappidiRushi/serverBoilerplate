{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src/",
    "paths": {
      "@config/*": [
        "config/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@plugins/*": [
        "plugins/*"
      ],
      "@middleware/*": [
        "middleware/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@schemas/*": [
        "schemas/*"
      ],
      "@validators/*": [
        "validators/*"
      ],
      "@db/*": [
        "db/*"
      ],
    },
    "types": [
      "bun-types",
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}