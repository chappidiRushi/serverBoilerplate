{
  "name": "backend-api-server",
  "version": "1.0.0",
  "description": "Backend API server with Elysia, PostgreSQL, and comprehensive middleware",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run --watch --inspect src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun dist/index.js",
    "db:up": "podman-compose up",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "elysia": "^1.1.23",
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/jwt": "^1.1.1",
    "@elysiajs/swagger": "^1.1.3",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "ioredis": "^5.7.0",
    "postgres": "^3.4.7",
    "winston": "^3.17.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4"
  }
}